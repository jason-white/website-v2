---
eleventyNavigation:
  key: Genres
  parent: Music Collection
eleventyComputed:
  title: "{{ eleventyNavigation.key }} | {{ eleventyNavigation.parent }}"
permalink: "/music-collection/genres/index.html"
---

{% include "partials/breadcrumb.njk" %}

<div class="index__page-title">
  <h1>Genres</h1>
</div>

<ul role="list" class="index__list">
  {% set sortedGenres = collections.genres | sort(attribute='releases.length') | reverse %}
  {% for genre in sortedGenres %}
    <li class="index__item">
      <a href="/music-collection/genres/{{ genre.genre | accentSlug }}.html">
        <div class="index__meta repel">
          <h2 class="index__heading">{{ genre.genre }}</h2>
          <p class="index__secondary">
            <span class="counter">{{ genre.releases.length }}</span>
            release{{ 's' if genre.releases.length !== 1 }}
          </p>
        </div>
      </a>
    </li>
  {% endfor %}
</ul>
