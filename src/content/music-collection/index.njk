{% for formatData in sortedFormats %}
  <section class="collection region">
    <header class="collection__header repel">
      <h2 class="title">{{ formatData.format }}</h2>
      <p class="meta">
        <span class="counter">{{ formatData.releases.length }}</span>
        release{{ 's' if formatData.releases.length !== 1 }}
      </p>
    </header>
    <ul role="list" class="collection__list grid" data-layout="thirds">
      {% set sortedReleases = formatData.releases | sort(attribute='artist') %}
      {% for release in sortedReleases | slice(0, 9) %}
        <li class="collection__item">
          <a
            href="/music-collection/releases/{{ release.title | accentSlug }}-{{ release.artist | accentSlug }}-{{ release.release_id }}.html"
            class="switcher"
          >
            <img
              src="img/{{ release.title | accentSlug }}-{{ release.artist | accentSlug }}.jpg"
              sizes="(min-width: 1740px) 280px, (min-width: 1460px) 16.92vw, (min-width: 1380px) calc(33.33vw - 157px), (min-width: 1180px) calc(22.78vw - 30px), (min-width: 880px) calc(30.36vw - 26px), (min-width: 780px) calc(46.25vw - 27px), (min-width: 580px) calc(11.67vw - 15px), calc(22.31vw - 7px)"
              alt="{{ release.title }}"
              class="collection__img"
            />
            <div class="collection__meta stack">
              <h2 class="collection__release">{{ release.title }}</h2>
              <p class="collection__artist">{{ release.artist }}</p>
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
    {% if formatData.releases.length > 10 %}
      <p>
        <a href="/music-collection/formats/{{ formatData.format | accentSlug }}.html" class="icon-link"
          >View all {{ formatData.releases.length }} {{ formatData.format }} releases</a
        >
      </p>
    {% endif %}
  </section>
{% endfor %}
